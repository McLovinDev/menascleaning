---
import DetailValues from './DetailValues.astro';

interface Props {
  image: string;
  slogan1: string;
  slogan2: string;
  description1: string;
  description2: string;
  data: any;
}

const { image, slogan1, slogan2, description1, description2,data } = Astro.props;
---

<div class="flex flex-wrap justify-center items-center">
  <!-- Image side with overlay -->
  <div class="relative md:w-1/2 w-full md:h-[80vh] h-[55vh] flex items-end">
    <img src={image} alt={slogan1} class="h-full w-full object-cover" />
    <div
      class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-end items-start self-end md:p-16 p-2"
    >
      <h2 class="text-white md:text-[40px] text-[25px] mb-2 font-bold">
        {slogan1}
      </h2>
      <p class="text-white">{description1}</p>
    </div>
  </div>

  <!-- Text side with white background -->
  <div
    class="md:w-1/2 w-full bg-gray-200 flex flex-col justify-start items-start self-start md:p-16 p-2 md:h-[80vh] h-[55vh]"
  >
    <h2 class="text-gray-800 md:text-[40px] text-[25px] mb-2 font-bold">
      {slogan2}
    </h2>
    <p class="text-gray-600">{description2}</p>
    <div class="flex flex-wrap gap-6 py-8">
        <DetailValues data={data} />
    </div>
  </div>
</div>
