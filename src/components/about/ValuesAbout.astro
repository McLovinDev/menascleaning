---
import type { RootObject } from "../../interfaces/dbData";
interface Props {
  data: RootObject;
}

const { data } = Astro.props;
---

<section
  class="flex items-center bg-stone-100 font-poppins md:py-24 py-16"
  style={{ backgroundColor: data.colors.primaryColor }}
>
  <div class="justify-center flex-1 max-w-6xl py-4 mx-auto lg:py-6 md:px-6">
    <div class="px-4 mb-10 md:text-center md:mb-20">
      <h2
        class="pb-2 text-2xl font-bold md:text-4xl text-white"
      >
        {data.slogan[5]}
      </h2>
      <div
        class="flex w-32 mt-1 mb-6 overflow-hidden rounded md:mx-auto md:mb-14"
      >
        <div class="flex-1 h-2 bg-blue-200"></div>
        <div
          class="flex-1 h-2"
          style={{ backgroundColor: data.colors.primaryColor }}
        >
        </div>
        <div
          class="flex-1 h-2"
          style={{ backgroundColor: data.colors.secondaryColor }}
        >
        </div>
      </div>
    </div>
    <div class="flex md:flex-row flex-col">
      <div class="w-full px-4 mb-10 lg:w-1/2 lg:mb-0">
        <img
          src={data.gallery[4]}
          alt=""
          class="relative z-40 object-cover w-full h-full rounded-xl"
        />
      </div>

      <div class="flex flex-col lg:w-1/2 lg:mb-0 items-center self-center">
        <div class="w-full px-4 mb-10">
          <h2
            class="py-3 pl-2 mb-4 text-2xl font-bold border-l-4 text-white"
            style={{ borderColor: data.colors.secondaryColor }}
          >
            Mission
          </h2>
          <p class="mb-4 text-base leading-7 text-white">
            {data.valuesContent.mission}
          </p>
        </div>
        <div class="w-full px-4 mb-10">
          <h2
            class="py-3 pl-2 mb-4 text-2xl font-bold border-l-4 text-white"
            style={{ borderColor: data.colors.secondaryColor }}
          >
            Vision
          </h2>
          <p class="mb-4 text-base leading-7 text-white">
            {data.valuesContent.vision}
          </p>
        </div>
        <div class="w-full px-4 mb-10">
          <h2
            class="py-3 pl-2 mb-4 text-2xl font-bold border-l-4 text-white"
            style={{ borderColor: data.colors.secondaryColor }}
          >
            Why Choose Us
          </h2>
          <p class="mb-4 text-base leading-7 text-white">
            {data.valuesContent.whychooseUs}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
